<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gory"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tabIndicatorColor="@color/home_select"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabPadding="0dp"
        app:tabSelectedTextColor="@color/home_select"
        app:tabTextAppearance="@style/TabTextStyle"
        app:tabTextColor="@color/black" />

    <RelativeLayout
        android:id="@+id/layout_select_category"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="选择类别"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/analysis_txt_category_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_select_open"
            android:gravity="center_vertical"
            android:text="全部"
            android:textColor="@color/home_un_select"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_select_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/section_open" />
    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/analysis_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

</LinearLayout>